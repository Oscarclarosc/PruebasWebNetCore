@model IEnumerable<PruebasWebNetCore.Web.Data.Entities.Proveedor>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<br />

<h1>Proveedores</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i> Registrar Nuevo</a>
</p>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table table-hover table-responsive-xl table-striped" id="ProveedoresTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NumeroTelefonos)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NumeroDirecciones)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NumeroTelefonos)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NumeroDirecciones)
                                </td>
                                <td align="right">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"> <i class="fa fa-pencil"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success"><i class="fa fa-book"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#ProveedoresTable').DataTable();
        });
    </script>
}
