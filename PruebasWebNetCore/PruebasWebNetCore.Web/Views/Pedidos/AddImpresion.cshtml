@model PruebasWebNetCore.Web.Models.ImpresionPedidoViewModel

@{
    ViewData["Title"] = "AddImpresion";
}

<h1>AddImpresion</h1>

<h4>ImpresionPedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddImpresion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PedidoId" />


            <div class="form-group">
                <label asp-for="Texto" class="control-label"></label>
                <input asp-for="Texto" class="form-control" />
                <span asp-validation-for="Texto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarasImpresas" class="control-label"></label>
                <input asp-for="CarasImpresas" class="form-control" />
                <span asp-validation-for="CarasImpresas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DimensionRodillo" class="control-label"></label>
                <input asp-for="DimensionRodillo" class="form-control" />
                <span asp-validation-for="DimensionRodillo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ColorId" class="control-label"></label>
                <select asp-for="ColorId" asp-items="Model.Colores" class="form-control"></select>
                <span asp-validation-for="ColorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
