@model IEnumerable<PruebasWebNetCore.Web.Data.Entities.Pedido>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<br />

<h1>Pedidos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i> Registrar Nuevo</a>
</p>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table table-hover table-responsive-xl table-striped " id="PedidosTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.EstadoPedido)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CantidadPedido)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CantidadExtruir)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Fecha)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Empresa)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Producto)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EstadoPedido)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CantidadPedido)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CantidadExtruir)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Fecha)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Empresa.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Producto.Codigo)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"> <i class="fa fa-pencil"></i> </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success"><i class="fa fa-book"></i> </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"> <i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#PedidosTable').DataTable();
        });
    </script>
}