@model IEnumerable<PruebasWebNetCore.Web.Data.Entities.Empleado>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<br />

<h1>Trabajadores</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus"></i> Agregar Nuevo</a>
</p>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table table-hover table-responsive-xl table-striped" id="EmpleadosTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.NombreCompleto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ImagenUrl)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ci)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cargo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FechaContrato)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.HoraEntrada)
                            </th>
                            
                            <th>
                                @Html.DisplayNameFor(model => model.Estado)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NombreCompleto)
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ImagenUrl))
                                    {
                                        <img src="@Url.Content(item.ImagenUrl)" alt="Image" style="width:150px;height:150px;max-width: 100%; " />
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ci)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cargo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaContrato)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HoraEntrada)
                                </td>
             
                                <td>
                                    @Html.DisplayFor(modelItem => item.Estado)
                                </td>
                                <td align="right">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"> <i class="fa fa-pencil"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success"><i class="fa fa-book"></i></a>                      
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#EmpleadosTable').DataTable();
        });
    </script>
}