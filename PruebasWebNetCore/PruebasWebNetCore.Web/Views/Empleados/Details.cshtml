@model PruebasWebNetCore.Web.Data.Entities.Empleado

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Empleado</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cargo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cargo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaContrato)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaContrato)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HoraEntrada)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoraEntrada)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImagenUrl)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImagenUrl))
            {
                <img src="@Url.Content(Model.ImagenUrl)" alt="Image" style="width:150px;height:25px;max-width: 100%; " />
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreCompleto)
        </dt>
        <dd class="col-sm-12">
            @Html.DisplayFor(model => model.NombreCompleto)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ci)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ci)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaNacimiento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaNacimiento)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-success">Back to List</a>
    <a asp-action="AddTelefono" asp-route-id="@Model.Id" class="btn btn-info">Add telefono</a>
    <a asp-action="AddDireccion" asp-route-id="@Model.Id" class="btn btn-info">Add direccion</a>
</div>

<h4>Telefonos</h4>
@if (Model.Telefonos == null || Model.Telefonos.Count == 0)
{
    <h5>No se han agregado telefonos</h5>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Telefonos.FirstOrDefault().Numero)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Telefonos.OrderBy(c => c.Numero))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Extencion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Numero)
                    </td>
                    <td id="@item.Id">
                        <a asp-action="EditTelefono" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="DeleteTelefono" asp-route-id="@item.Id" class="btn btn-danger" id="btnDelete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<h4>Direcciones</h4>
@if (Model.Direcciones == null || Model.Direcciones.Count == 0)
{
    <h5>No se han agregado direcciones</h5>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Direcciones.FirstOrDefault().DireccionFisica)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Direcciones.FirstOrDefault().CityId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Direcciones.OrderBy(c => c.DireccionFisica))
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DireccionFisica)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CityId)
                </td>
                <td id="@item.Id">
                    <a asp-action="EditDireccion" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="DeleteDireccion" asp-route-id="@item.Id" class="btn btn-danger" id="btnDelete">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
}
