@model PruebasWebNetCore.Web.Data.Entities.Empresa

@{
    ViewData["Title"] = "Details";
}

<h1>Empresa</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fa fa-pencil"></i> Editar Empresa</a>
</p>


<h4>Telefonos</h4>
@if (Model.Telefonos == null || Model.Telefonos.Count == 0)
{
    <p>
        <a asp-action="AddTelefono" asp-route-id="@Model.Id" class="btn btn-primary"><i class="fa fa-plus"></i> Add telefono</a>
    </p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Telefonos.FirstOrDefault().Numero)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Telefonos.OrderBy(c => c.Numero))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Extencion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Numero)
                    </td>
                    <td id="@item.Id">
                        <a asp-action="EditTelefono" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="DeleteTelefono" asp-route-id="@item.Id" class="btn btn-danger" id="btnDelete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<h4>Direcciones</h4>
@if (Model.Direcciones == null || Model.Direcciones.Count == 0)
{
    <p>
        <a asp-action="AddDireccion" asp-route-id="@Model.Id" class="btn btn-primary"> <i class="fa fa-plus"></i> Add direccion</a>
    </p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Direcciones.FirstOrDefault().DireccionFisica)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Direcciones.OrderBy(c => c.DireccionFisica))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DireccionFisica)
                    </td>
                    <td id="@item.Id">
                        <a asp-action="EditDireccion" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="DeleteDireccion" asp-route-id="@item.Id" class="btn btn-danger" id="btnDelete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<p>
    <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-chevron-circle-left"></i>Back to List</a>
</p>