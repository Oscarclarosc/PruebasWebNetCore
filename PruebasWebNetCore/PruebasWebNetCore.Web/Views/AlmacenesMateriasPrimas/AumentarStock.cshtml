@model PruebasWebNetCore.Web.Models.AumentarMateriaPrimaStockViewModel

@{
    ViewData["Title"] = "AumentarStock";
}

<h1>AumentarStock</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AumentarStock">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AlmacenMateriaPrimaId" />
            <input type="hidden" asp-for="CantidadAnterior" />
            <input type="hidden" asp-for="MateriaPrimaId" />
            <input type="hidden" asp-for="EmpleadoId" />
            <input type="hidden" asp-for="Observaciones" />

            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-chevron-circle-left"></i> Volver</a>
</div>

